Screen:

    MDCard:
        size_hint: None, None
        size: 600, 700
        pos_hint: {"center_x":0.5, "center_y":0.5}
        elevation: 20
        padding: 25
        spacing: 25
        orientation: 'vertical'
        Image:
            source: 'Resources/sf.png'

        MDLabel:
            id: welcome_label
            text: "WELCOME"
            halign: 'center'
            size_hint_y: None
            font_size: 65
            height: self.texture_size[1]
            padding_y: 15
            # Text Properties
            color: (1,0,0,1)
            bold: True

        MDTextFieldRound:
            id: user
            hint_text: "username"
            icon_right: "account"
            size_hint_x: None
            width: 400
            font_size: 35
            pos_hint: {"center_x": 0.5}

        MDTextFieldRound:
            id: password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 400
            font_size: 35
            pos_hint: {"center_x": 0.5}
            password: True

        MDRoundFlatButton:
            text: "LOG IN"
            font_size: 30
            pos_hint: {"center_x": 0.5}

        MDRoundFlatButton:
            text: "Forget password"
            font_size: 30
            pos_hint: {"center_x": 0.5}
