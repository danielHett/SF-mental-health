
<UI>:
    Screen:
        MDCard:
            size_hint: None, None
            size: 600, 700
            pos_hint: {"center_x":0.5, "center_y":0.5}
            elevation: 20
            padding: 25
            spacing: 25
            orientation: 'vertical'

            MDLabel:
                id: welcome_label
                text: "WELCOME"
                halign: 'center'
                size_hint_y: None
                font_size: 30
                height: self.texture_size[1]
                padding_y: 15

            MDTextFieldRound:
                id: user
                hint_text: "username"
                icon_right: "account"
                size_hint_x: None
                width: 400
                font_size: 20
                pos_hint: {"center_x": 0.5}

            MDTextFieldRound:
                id: password
                hint_text: "password"
                icon_right: "eye-off"
                size_hint_x: None
                width: 400
                font_size: 20
                pos_hint: {"center_x": 0.5}
                password: True

            MDRoundFlatButton:
                text: "LOG IN"
                font_size: 20
                pos_hint: {"center_x": 0.5}
                on_press: app.logger()

            MDRoundFlatButton:
                text: "Forget password"
                font_size: 20
                pos_hint: {"center_x": 0.5}
    Screen:
        name: "screen2"
    Screen:
        name: "screen3"
